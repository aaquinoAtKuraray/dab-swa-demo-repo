{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v0.7.6/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "options": {
      "set-session-context": true
    },
    "connection-string": "@env('my-connection-string')"
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/api"
    },
    "graphql": {
      "allow-introspection": true,
      "enabled": false,
      "path": "/graphql"
    },
    "host": {
      "mode": "development",
      "cors": {
        "origins": [],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "dbo.authors": {
      "source": {
        "type": "table",
        "object": "[dbo].[authors]",
        "key-fields": [
          "id"
        ]
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "create",
            "read",
            "update",
            "delete"
          ]
        }
      ],
      "mappings": {
        "id": "id",
        "first_name": "first_name",
        "middle_name": "middle_name",
        "last_name": "last_name"
      },
      "rest": {
        "path": "/dboauthors"
      }
    },
    "dbo.books": {
      "source": {
        "type": "table",
        "object": "[dbo].[books]",
        "key-fields": [
          "id"
        ]
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "create",
            "read",
            "update",
            "delete"
          ]
        }
      ],
      "mappings": {
        "id": "id",
        "title": "title",
        "year": "year",
        "pages": "pages"
      },
      "rest": {
        "path": "/dbobooks"
      }
    },
    "dbo.books_authors": {
      "source": {
        "type": "table",
        "object": "[dbo].[books_authors]",
        "key-fields": [
          "author_id",
          "book_id"
        ]
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "create",
            "read",
            "update",
            "delete"
          ]
        }
      ],
      "mappings": {
        "author_id": "author_id",
        "book_id": "book_id"
      },
      "rest": {
        "path": "/dbobooks_authors"
      }
    },
    "dbo.vw_books_details": {
      "source": {
        "type": "view",
        "object": "[dbo].[vw_books_details]",
        "key-fields": [
          "id"
        ]
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "read"
          ]
        }
      ],
      "mappings": {
        "id": "id",
        "title": "title",
        "pages": "pages",
        "year": "year",
        "authors": "authors"
      },
      "rest": {
        "path": "/dbovw_books_details"
      }
    }
  }
}
